<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.greymax.android.sve.app">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.greymax.android.sve.app.VideoSelectActivity" />
        <activity android:name="com.greymax.android.sve.app.TrimmerActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.greymax.android.sve.app.VideoOutputActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.greymax.android.sve.app.VideoAddActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>